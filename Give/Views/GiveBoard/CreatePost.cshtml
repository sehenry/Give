@model Give.Models.GiveBoard

@{
    ViewBag.Title = "CreatePost";
}

<div id="giverContainer" class="row col-md-12 col-center">
    <div class="rightBorder leftBorder">
        <h1>Give Board Post</h1>
        <h4>
            If you have items to Give away, post them right here and let the Recipients who need them, come to you!
            What may be garbage to you, could mean a lot to a member of your community! Think twice before throwing
            away something! Post it to Give, and make your community a better place.
        </h4>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div id="formContainer" class="row col-md-12">
        <div class="col-md-6">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GiverName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GiverName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GiverName, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ItemDescription, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemDescription, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemDescription, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ItemLocation, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.ItemLocation, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ItemLocation, "", new { @class = "text-danger" })
                </div>
                
            </div>
        </div>
        <div class="col-md-4">
            <img src="~/Content/HighFivePeople.png" width="500" height="375" />
        </div>
    </div>
    <div class="form-group">
        <div class="">
            <input type="submit" class="btn btn-secondary btn-lg" value="Submit Item" />
        </div>
    </div>

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
